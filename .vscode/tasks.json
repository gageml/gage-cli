{
  "version": "2.0.0",
  "problemMatcher": [
    {
      "owner": "groktest",
      "fileLocation": "absolute",
      "pattern": {
        "regexp": "^File \"(.*)\", line (\\d+)",
        "file": 1,
        "line": 2
      }
    },
    {
      "owner": "custom",
      "fileLocation": "relative",
      "pattern": {
        "regexp": "panicked at (.*?):([0-9]+):([0-9]+)",
        "file": 1,
        "line": 2,
        "column": 3
      }
    }
  ],
  "presentation": {
    "revealProblems": "onProblem",
    "showReuseMessage": false,
    "clear": true,
    "focus": false
  },
  "inputs": [
    {
      "id": "testName",
      "description": "Name of the test to run",
      "type": "promptString"
    }
  ],
  "tasks": [
    {
      "label": "groktest: all",
      "type": "process",
      "command": "groktest",
      "args": ["."],
      "options": { "env": { "GAGE_INSPECT": "../gage-inspect" } }
    },
    {
      "label": "groktest: current",
      "type": "process",
      "command": "groktest",
      "args": ["${relativeFile}"],
      "options": { "env": { "GAGE_INSPECT": "../gage-inspect" } }
    },
    {
      "label": "groktest: last",
      "type": "process",
      "command": "groktest",
      "args": ["--last"],
      "options": { "env": { "GAGE_INSPECT": "../gage-inspect" } }
    },
    {
      "label": "cargo: clippy",
      "type": "process",
      "command": "cargo",
      "args": ["clippy"]
    },
    {
      "label": "cargo: test",
      "type": "process",
      "command": "cargo",
      "args": ["test"]
    },
    {
      "label": "cargo: test one",
      "type": "process",
      "command": "cargo",
      "args": ["test", "${input:testName}"]
    }
  ]
}
